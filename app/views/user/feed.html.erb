	<div class="navbar navbar-static-top">
		<div class="navbar-inner">
			<a class="brand", href='/user/index'>Monthlygram</a>
			<ul class="nav pull-right">
				<li><img src="<%= @ig_user.profile_picture %>" style="height:30px; width:auto; padding-top:5px"></li>
				<li><a href="#"><%= @ig_user.username %></a></li>
				<li class="divider-vertical"></li>
				<li><a href="/oauth/logout">Log out</a></li>
			</ul>
		</div>		
	</div>
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span2">
					<%= form_tag user_feed_path, method: "get" do %>
						<% # month_options is an array in application_helper %>
						<%= select_tag :month, options_for_select(month_options, params[:month] || @today[1]) %></br>
						<%= select_tag :year, options_for_select(year_options, params[:year] || @today[0]) %>
						<%= submit_tag "Go", :class => "btn btn-success"%>
					<% end %>
				</div>
			<div class="span10">
				<%= render partial: "photo", collection: @photos %>
				<% if @photos.size == 0 %>
				<%=   render partial: "none" %>
				<% end %>
			</div>
		</div>
