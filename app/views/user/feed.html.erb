<body>
	<div class="navbar navbar-static-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="brand", href='/user/index'>Monthlygram</a>
				<ul class="nav pull-right">
					<li><img src=<%= "#{@user.profile_picture}" %> style="height:30px; width:auto; padding-top:5px"></li>
					<li><a href="#"><%= "#{@user.username}" %></a></li>
					<li class="divider-vertical"></li>
					<li><a href="/oauth/logout">Log out</a></li>
				</ul>
			</div>
		</div>		
	</div>
	<div class="container">
		<div class="span12">
			<div class="span2">
				<ul class="nav nav-list">
					<li class="nav-header">Choose A Month</li>
					<li class="active">
						<%= form_tag user_feed_path, method: "get" do %>
							<%= select_tag :month, options_for_select( ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"], params[:month]) %>
							<%= submit_tag "Go" %>
						<% end %>
					</li>
				</ul>
			</div>
			<div class="span10">
				<div class="thumbnails">
					<%= render partial: "photo", collection: @photos %>
				</div>
			</div>			
		</div>
	</div>
</body>